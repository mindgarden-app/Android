<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
        package="com.example.mindgarden">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />

    <permission
            android:name="your.application.package.name.permission.C2D_MESSAGE"
            android:protectionLevel="signature" />

    <application
            android:name=".Network.ApplicationController"
            android:allowBackup="true"
            android:icon="@drawable/mindgarden_logo"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:usesCleartextTraffic="true">
        <activity android:name=".ui.login.EmailPasswordActivity"></activity>
        <activity android:name=".ui.login.TermsOfUseActivity" />
        <activity android:name=".ui.login.PrivacyStatementActivity" />
        <activity android:name=".ui.login.EmailSignUpActivity" />
        <activity android:name=".ui.login.EmailSignInActivity" />
        <activity android:name=".ui.login.WebviewLoginActivity" />
        <activity
                android:name=".ui.main.MainCalendarActivity"
                android:theme="@style/Theme.MyPopUpWindow" />
        <activity android:name=".ui.diary.ModifyDiaryActivity" />
        <activity
                android:name=".ui.diary.MoodChoiceActivity"
                android:theme="@style/Theme.MyPopUpWindow" />
        <activity android:name=".ui.diary.ReadDiaryActivity" />
        <activity android:name=".ui.diary.WriteDiaryActivity" />
        <activity android:name=".ui.main.MainActivity" />
        <activity android:name=".ui.inventory.InventoryActivity" />
        <activity android:name=".ui.password.PasswordActivity" />
        <activity android:name=".ui.password.PasswordSettingActivity" />
        <activity android:name=".ui.alarm.AlarmSettingActivity" />
        <activity android:name=".ui.mypage.MypageActivity" />
        <activity android:name=".ui.login.LoginActivity" />
        <activity
                android:name=".ui.splash.SplashActivity"
                android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver android:name=".BroadCastReceiver.BroadcastD" />
    </application>

</manifest>