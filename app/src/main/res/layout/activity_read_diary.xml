<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".Activity.WriteDiaryActivity"
android:orientation="vertical"
android:background="#FFFFFF"
>

<LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
    <include layout="@layout/toolbar_read_diary"/>
</LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
    >

    <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

        >

            <ImageView
                    android:layout_width="325dp"
                    android:layout_height="55dp"
                    android:scaleType="fitXY"
                    android:layout_centerVertical="true"
                    android:id="@+id/img_mood_text_read_diary"
                    android:src="@drawable/btn_moodchoice"
                    android:layout_centerInParent="true"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:id="@+id/txt_mood_text_read_diary"
                    android:text="기분을 선택하세요."
                    android:fontFamily="@font/notosanscjkr_regular"
                    android:textColor="#2B2B2B"
                    android:textSize="15dp"

            />

            <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                            android:layout_centerVertical="true" android:layout_alignLeft="@id/img_mood_text_read_diary">
                <ImageView
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:src="@drawable/btn_mood_show"/>
                <ImageView
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/img_weather11_none"
                        android:id="@+id/img_mood_icon_read_diary"
                />
            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
    >

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="저장시간"
                android:fontFamily="@font/notosanscjkr_bold"
                android:textSize="13.5dp"
                android:textColor="#2B2B2B"
                android:textStyle="bold"
                android:background="@null"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/img_mood_text_read_diary"
                android:layout_marginLeft="23dp"
                android:layout_marginRight="23dp"
                android:layout_marginBottom="18dp"
                android:id="@+id/txt_time_read_diary"/>

        <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical">


                    <ImageView android:layout_width="300dp"
                               android:layout_height="202dp"
                               android:layout_marginRight="40dp"
                               android:layout_marginLeft="40dp"
                               android:layout_marginBottom="48dp"
                               android:layout_gravity="center"
                               android:visibility="gone"
                               android:id="@+id/img_gallary_read_diary"
                    />

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="내용"
                            android:fontFamily="@font/notosanscjkr_demilight"
                            android:textColor="#2B2B2B"
                            android:textSize="15dp"
                            android:background="@null"
                            android:layout_marginLeft="23dp"
                            android:layout_marginRight="23dp" android:id="@+id/txt_cotent_read_diary"/>
                </LinearLayout>

            </ScrollView>

        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:background="#F8F8F8"/>

    </LinearLayout>

</LinearLayout>