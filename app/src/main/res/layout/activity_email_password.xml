<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:background="#ffffff"
        tools:context=".ui.login.EmailPasswordActivity">
    <include
            android:id="@+id/toolbar_email_password"
            layout="@layout/toolbar_mypage_main"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="42dp"
            android:fontFamily="@font/notosanscjkr_medium"
            android:includeFontPadding="false"
            android:text="새로운 비밀번호 전송"
            android:textColor="@color/colorBlack"
            android:textSize="19sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar_email_password" />

    <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="19dp"
            android:fontFamily="@font/notosanscjkr_regular"
            android:includeFontPadding="false"
            android:text="이메일 ID를 제출하시면,\n새로운 비밀번호를 메일로 보내드립니다."
            android:textColor="@color/colorRoundGray"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="23dp"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/notosanscjkr_regular"
            android:includeFontPadding="false"
            android:text="이메일"
            android:textColor="@color/colorBlack"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <EditText
            android:id="@+id/edt_email_password_forgot"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/gray_border_square"
            android:ems="10"
            android:fontFamily="@font/notosanscjkr_medium"
            android:includeFontPadding="false"
            android:inputType="textEmailAddress"
            android:paddingLeft="12dp"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
            android:id="@+id/txt_check_email_password_forgot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="21dp"
            android:layout_marginTop="3dp"
            android:fontFamily="@font/notosanscjkr_medium"
            android:includeFontPadding="false"
            android:text="이메일 형식으로 적어주세요."
            android:textColor="@color/colorRed"
            android:textSize="11sp"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edt_email_password_forgot" />

    <TextView
            android:id="@+id/btn_email_password_find"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/grid_border"
            android:fontFamily="@font/notosanscjkr_medium"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="메일 보내기"
            android:textColor="@color/colorPrimaryMint"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_check_email_password_forgot" />


</androidx.constraintlayout.widget.ConstraintLayout>