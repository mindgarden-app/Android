<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:background="@color/colorWhite"
                                            android:orientation="vertical">
    <include
            android:id="@+id/toolbar_mypage_main"
            layout="@layout/toolbar_mypage_main"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right">

        <ImageView
                android:layout_width="89.58dp"
                android:layout_height="69.03dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                app:srcCompat="@drawable/img_minigarden"
                android:id="@+id/img_minigarden" />

    </LinearLayout>

    <LinearLayout android:layout_width="match_parent" android:layout_height="0px" android:layout_weight="6">

        <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent"
                        tools:layout_editor_absoluteY="220dp" tools:layout_editor_absoluteX="0dp">

            <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_grid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_alignParentTop="true"
            ></android.support.v7.widget.RecyclerView>
        </RelativeLayout>
    </LinearLayout>

    <ImageView
            android:id="@+id/btn_choose"
            android:layout_width="28.04dp"
            android:layout_height="27.14dp"
            android:layout_gravity="right"
            android:layout_marginBottom="10.7dp"
            android:layout_marginRight="15dp"
            app:srcCompat="@drawable/btn_choose"/>

    <LinearLayout
            android:id="@+id/lay_inventory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/inventory_layout_border">

        <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_inventory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="8dp"
        ></android.support.v7.widget.RecyclerView>

    </LinearLayout>

    <!--<GridView
            android:id="@+id/gridView"
            android:layout_width="350dp"
            android:layout_height="350dp"
            android:numColumns="6"
            android:stretchMode="columnWidth"
            app:layout_constraintTop_toTopOf="parent"
