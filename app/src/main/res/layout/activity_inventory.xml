<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:background="@color/colorWhite">
    <GridView
            android:id="@+id/gridView"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:numColumns="6"
            android:stretchMode="columnWidth"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="144dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="179dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="6dp" android:layout_marginEnd="6dp"/>

    <LinearLayout
            android:id="@+id/lay_inventory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/inventory_layout_border">

        <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_inventory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"></android.support.v7.widget.RecyclerView>

    </LinearLayout>

    <ImageView
            android:id="@+id/btn_check"
            android:layout_width="28.04dp"
            android:layout_height="27.14dp"
            app:layout_constraintBottom_toTopOf="@+id/lay_inventory"
            android:layout_marginBottom="10.7dp"
            android:layout_marginRight="16dp"
            app:srcCompat="@drawable/btn_mood_show" app:layout_constraintEnd_toEndOf="parent"/>

</android.support.constraint.ConstraintLayout>