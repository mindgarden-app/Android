<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:background="@color/colorWhite"
                                             android:orientation="vertical"
                                             android:weightSum="90">
    <include
            android:id="@+id/toolbar_mypage_main"
            layout="@layout/toolbar_mypage_main"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="24"
            android:gravity="right">

        <ImageView
                android:layout_width="89.58dp"
                android:layout_height="69.03dp"
                android:layout_marginTop="10dp"
                android:gravity="right"
                android:layout_marginRight="10dp"
                app:srcCompat="@drawable/img_map"
                android:id="@+id/img_map" />

    </LinearLayout>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_point_n"
            android:layout_gravity="left"
            android:layout_marginLeft="10dp"/>

    <RelativeLayout
            android:layout_weight="47"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

        <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_grid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
        ></android.support.v7.widget.RecyclerView>

    </RelativeLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:orientation="vertical"
            android:gravity="right">

    <ImageView
            android:layout_width="20.15dp"
            android:layout_height="20.15dp"
            android:src="@drawable/img_point_s"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"/>

    <ImageView
            android:id="@+id/btn_choose"
            android:layout_width="28.04dp"
            android:layout_height="27.14dp"
            android:layout_gravity="right"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10.7dp"
            android:layout_marginRight="15dp"
            app:srcCompat="@drawable/btn_choose"/>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/lay_inventory"
            android:layout_width="match_parent"
            android:layout_height="229dp"
            android:layout_weight="9"
            android:background="@drawable/inventory_layout_border">

        <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_inventory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="8dp"
        ></android.support.v7.widget.RecyclerView>

    </LinearLayout>



</LinearLayout>