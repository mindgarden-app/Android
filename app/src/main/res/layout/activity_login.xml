<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:background="@color/colorWhite">
    <ImageView
            android:layout_width="73dp"
            android:layout_height="71dp"
            android:src="@drawable/android_tree1"
            android:id="@+id/loginSingleTree"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="166dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="spread_inside"
    />
    <ImageButton
            android:layout_width="311dp"
            android:layout_height="36dp"
            app:srcCompat="@drawable/login_image"
            android:id="@+id/btnLogin"
            android:background="@color/colorWhite"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:contentDescription="TODO"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" tools:ignore="MissingConstraints"
            android:layout_marginBottom="100dp" app:layout_constraintBottom_toBottomOf="parent"/>

    <WebView
            android:id="@+id/webView"
            android:layout_width="416dp"
            android:layout_height="316dp"
            android:visibility="visible" tools:ignore="MissingConstraints"/>
    <RelativeLayout
            android:layout_width="204dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            tools:ignore="MissingConstraints"
            android:id="@+id/relativeLayout2"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="103dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="104dp" android:layout_marginTop="102dp"
            app:layout_constraintTop_toBottomOf="@+id/loginSingleTree" android:layout_marginBottom="48dp"
            app:layout_constraintBottom_toTopOf="@+id/btnLogin">

        <android.support.v4.view.ViewPager
                android:id="@+id/vpLoginSlider"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="0dp">
        </android.support.v4.view.ViewPager>
        <android.support.design.widget.TabLayout
                android:id="@+id/tlLoginIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                app:tabIndicatorHeight="0dp">
        </android.support.design.widget.TabLayout>
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>