<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:background="@color/colorWhite">


    <TextView
            android:id="@+id/txtPassword"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:text="비밀번호를 입력해주세요."
            android:fontFamily="@font/notosanscjkr_regular"
            android:textSize="15dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#3c3c3c"
            android:layout_marginTop="100dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="72dp" android:layout_marginEnd="72dp"
            app:layout_constraintHorizontal_bias="0.0"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="23dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/linearLayout3" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="42dp" app:layout_constraintTop_toBottomOf="@+id/txtPassword">
        <ImageView
                android:id="@+id/password1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/passdot_selector"
        />
        <ImageView
                android:id="@+id/password2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/passdot_selector"
        />
        <ImageView
                android:id="@+id/password3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/passdot_selector"
        />
        <ImageView
                android:id="@+id/password4"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/passdot_selector"
        />

    </LinearLayout>

    <TextView
            android:id="@+id/btnForgetPw"
            android:text="비밀번호를 잊어버리셨나요?"
            android:fontFamily="@font/notosanscjkr_regular"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:gravity="center"
            android:textColor="#888888"
            android:textSize="14dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="98dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="98dp"
            app:layout_constraintHorizontal_bias="0.49"
            android:layout_marginTop="21dp" app:layout_constraintTop_toBottomOf="@+id/linearLayout3"/>
    <TableLayout
            android:layout_width="0px"
            android:layout_height="313dp"
            android:background="@color/colorWhite"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="60dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="59dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="59dp"
            android:id="@+id/tableLayout2">

        <TableRow
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="1"
                android:id="@+id/tableRow">

            <Button
                    android:id="@+id/btn1"
                    android:fontFamily="@font/notosanscjkr_demilight"
                    android:textSize="20dp"
                    android:textColor="#3C3C3C"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="1"
                    android:gravity="center|center"
                    android:background="@color/colorWhite"
            />
            <Button
                    android:id="@+id/btn2"
                    android:fontFamily="@font/notosanscjkr_demilight"
                    android:textSize="20dp"
                    android:textColor="#3C3C3C"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="2"
                    android:gravity="center"
                    android:layout_weight="1" android:background="@color/colorWhite"/>
            <Button
                    android:id="@+id/btn3"
                    android:fontFamily="@font/notosanscjkr_demilight"
                    android:textSize="20dp"
                    android:textColor="#3C3C3C"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="3" android:background="@color/colorWhite"/>
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="1">
            <Button
                    android:id="@+id/btn4"
                    android:layout_weight="1"
                    android:fontFamily="@font/notosanscjkr_demilight"
                    android:textSize="20dp"
                    android:textColor="#3C3C3C"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="4" android:background="@color/colorWhite"/>
            <Button
                    android:id="@+id/btn5"
                    android:layout_weight="1"
                    android:fontFamily="@font/notosanscjkr_demilight"
                    android:textSize="20dp"
                    android:textColor="#3C3C3C"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="5" android:background="@color/colorWhite"/>
            <Button
                    android:id="@+id/btn6"
                    android:layout_weight="1"
                    android:fontFamily="@font/notosanscjkr_demilight"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="6" android:textSize="20dp"
                    android:textColor="#3C3C3C" android:background="@color/colorWhite"/>
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="1">
            <Button
                    android:id="@+id/btn7"
                    android:layout_weight="1"
                    android:fontFamily="@font/notosanscjkr_demilight"
                    android:textSize="20dp"
                    android:textColor="#3C3C3C"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="7" android:background="@color/colorWhite"/>
            <Button
                    android:id="@+id/btn8"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/notosanscjkr_demilight"
                    android:textSize="20dp"
                    android:textColor="#3C3C3C"
                    android:text="8"
                    android:gravity="center" android:background="@color/colorWhite"/>
            <Button
                    android:id="@+id/btn9"
                    android:layout_weight="1"
                    android:fontFamily="@font/notosanscjkr_demilight"
                    android:textSize="20dp"
                    android:textColor="#3C3C3C"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="9" android:background="@color/colorWhite"/>
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="1">
            <TextView
                    android:text=" " android:textSize="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1" android:background="@color/colorWhite"/>
            <Button
                    android:id="@+id/btn0"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/notosanscjkr_demilight"
                    android:text="0" android:textSize="20dp"
                    android:textColor="#3C3C3C"
                    android:layout_weight="1.2"
                    android:gravity="center" android:background="@color/colorWhite"/>
            <ImageButton
                    android:id="@+id/btnNumBack"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/btn_back"
                    android:gravity="center"
                    android:layout_weight="1" android:background="@color/colorWhite"/>

        </TableRow>
    </TableLayout>



</androidx.constraintlayout.widget.ConstraintLayout>