<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:background="@color/colorWhite">


    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:id="@+id/linearLayout"
            tools:ignore="MissingConstraints"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            >
        <include
                android:id="@+id/toolbar_main"
                layout="@layout/toolbar_mypage_main"/>
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:paddingVertical="10dp"
                android:paddingHorizontal="10dp"
                android:background="@drawable/gray_bottom_border"
                >
            <ImageView
                    android:id="@+id/myImage"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentTop="true"
                    app:srcCompat="@drawable/single_tree"
                    android:layout_marginTop="0dp"/>


            <TextView
                    android:id="@+id/userName"
                    android:text="정은이님"
                    android:layout_marginTop="5dp"
                    android:layout_height="20dp"
                    android:layout_width="50dp"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:layout_toEndOf="@id/myImage"
                    android:gravity="center|center"
            >
            </TextView>
            <TextView
                    android:id="@+id/level"
                    android:text="무료회원"
                    android:paddingStart="2dp"
                    android:paddingEnd="2dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center|center"
                    android:layout_height="20dp"
                    android:layout_width="50dp"
                    android:layout_toEndOf="@id/userName"
                    android:textSize="12sp"
                    android:background="@drawable/gray_border_fill">
            </TextView>
            <TextView
                    android:text="chungee375@gmail.com"
                    android:paddingStart="2dp"
                    android:paddingEnd="2dp"
                    android:gravity="center|center"
                    android:layout_height="20dp"
                    android:layout_width="150dp"
                    android:layout_alignBottom="@id/myImage"
                    android:layout_toEndOf="@id/myImage"
                    android:textSize="12sp"
                    android:background="@drawable/gray_bottom_border">
            </TextView>


        </RelativeLayout>

        <Button
                android:id="@+id/btnLogout"
                android:text="로그아웃"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:gravity="start|center"
                android:layout_height="50dp"
                android:layout_width="match_parent"
                android:background="@drawable/gray_bottom_border">
        </Button>

    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="200dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.478" tools:ignore="MissingConstraints"
            android:layout_marginTop="80dp" app:layout_constraintTop_toBottomOf="@+id/linearLayout">


        <Button
                android:text="암호 설정"
                android:id="@+id/btnPasswordSetting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:gravity="start|center"
                android:layout_weight="1"
                android:background="@drawable/gray_top_border"/>
        <Button
                android:text="글꼴 설정"
                android:id="@+id/fontSetting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:gravity="start|center"
                android:layout_weight="1"
                android:background="@drawable/gray_bottom_border" android:elevation="10dp"/>
        <Button
                android:text="알림 설정"
                android:id="@+id/alarmSetting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:gravity="start|center"
                android:layout_weight="1"
                android:background="@drawable/gray_bottom_border"
                android:elevation="10dp"/>
        <Button
                android:text="프리미엄 전환 설정"
                android:id="@+id/premium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:gravity="start|center"
                android:layout_weight="1"
                android:background="@drawable/gray_bottom_border"
                android:elevation="10dp"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>