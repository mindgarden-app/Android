<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="18dp"
       >

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ll_rv_item_mood_choice_container">

        <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/img_icon_rv_item_mood_choice"
                android:src="@drawable/icn_weather_001"
        />
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="left"
                android:layout_marginLeft="40dp"
                android:text="text "
                android:fontFamily="@font/notosanscjkr_regular"
                android:textSize="12dp"
                android:textColor="#2B2B2B"
                android:id="@+id/txt_rv_item_mood_choice"/>
    </LinearLayout>

</RelativeLayout>