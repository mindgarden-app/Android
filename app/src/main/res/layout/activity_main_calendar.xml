<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".ui.main.MainCalendarActivity"
        android:background="@drawable/round_layout_border"
        android:orientation="vertical"
        android:id="@+id/ll_main_calendar">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/toolbar_layout_border">

        <ImageView
                android:id="@+id/btnLeftMainCalendar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="50dp"
                android:paddingTop="10dp"
                android:paddingEnd="55dp"
                android:paddingBottom="10dp"
                android:src="@drawable/btn_left"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/txtYearMainCalendar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        <TextView
                android:id="@+id/txtYearMainCalendar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="14dp"
                android:fontFamily="@font/notosanscjkr_bold"
                android:paddingBottom="12dp"
                android:textColor="#6b6b6b"
                android:textSize="18dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        <ImageView
                android:id="@+id/btnRightMainCalendar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="70dp"
                android:paddingTop="10dp"
                android:paddingEnd="55dp"
                android:paddingBottom="10dp"
                android:src="@drawable/btn_right"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/txtYearMainCalendar"
                app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:splitMotionEvents="false"

    >

        <TextView
                android:id="@+id/txt_1_main_cal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:paddingLeft="12dp"
                android:paddingTop="5dp"
                android:paddingRight="12dp"
                android:paddingBottom="5dp"
                android:tag="0"
                android:text="1"
                android:textColor="#6B6B6B"
                android:textSize="17dp" />

        <TextView
                android:id="@+id/txt_2_main_cal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:paddingLeft="12dp"
                android:paddingTop="5dp"
                android:paddingRight="12dp"
                android:paddingBottom="5dp"
                android:tag="1"
                android:text="2"
                android:textColor="#6B6B6B"
                android:textSize="17dp" />

        <TextView
                android:id="@+id/txt_3_main_cal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:paddingLeft="12dp"
                android:paddingTop="5dp"
                android:paddingRight="12dp"
                android:paddingBottom="5dp"
                android:tag="2"
                android:text="3"
                android:textColor="#6B6B6B"
                android:textSize="17dp" />

        <TextView
                android:id="@+id/txt_4_main_cal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="12dp"
                android:paddingTop="5dp"
                android:paddingRight="12dp"
                android:paddingBottom="5dp"
                android:tag="3"
                android:text="4"
                android:textColor="#6B6B6B"
                android:textSize="17dp" />
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

        <TextView
                android:id="@+id/txt_5_main_cal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:paddingLeft="12dp"
                android:paddingTop="5dp"
                android:paddingRight="12dp"
                android:paddingBottom="5dp"
                android:tag="4"
                android:text="5"
                android:textColor="#6B6B6B"
                android:textSize="17dp" />

        <TextView
                android:id="@+id/txt_6_main_cal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:paddingLeft="12dp"
                android:paddingTop="5dp"
                android:paddingRight="12dp"
                android:paddingBottom="5dp"
                android:tag="5"
                android:text="6"
                android:textColor="#6B6B6B"
                android:textSize="17dp" />

        <TextView
                android:id="@+id/txt_7_main_cal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:paddingLeft="12dp"
                android:paddingTop="5dp"
                android:paddingRight="12dp"
                android:paddingBottom="5dp"
                android:tag="6"
                android:text="7"
                android:textColor="#6B6B6B"
                android:textSize="17dp" />

        <TextView
                android:id="@+id/txt_8_main_cal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="12dp"
                android:paddingTop="5dp"
                android:paddingRight="12dp"
                android:paddingBottom="5dp"
                android:tag="7"
                android:text="8"
                android:textColor="#6B6B6B"
                android:textSize="17dp" />
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

        <TextView
                android:id="@+id/txt_9_main_cal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:paddingLeft="12dp"
                android:paddingTop="5dp"
                android:paddingRight="12dp"
                android:paddingBottom="5dp"
                android:tag="8"
                android:text="9"
                android:textColor="#6B6B6B"
                android:textSize="17dp" />
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="10" android:textSize="17dp" android:layout_marginEnd="18dp"
                  android:paddingRight="8dp" android:paddingLeft="8dp" android:textColor="#6B6B6B"
                  android:paddingBottom="5dp" android:paddingTop="5dp"
                  android:id="@+id/txt_10_main_cal" android:tag="9" />
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="11" android:textSize="17dp" android:layout_marginEnd="18dp"
                  android:paddingRight="8dp" android:paddingLeft="8dp" android:textColor="#6B6B6B"
                  android:paddingBottom="5dp" android:paddingTop="5dp"
                  android:id="@+id/txt_11_main_cal" android:tag="10" />

        <TextView
                android:id="@+id/txt_12_main_cal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:paddingTop="5dp"
                android:paddingRight="8dp"
                android:paddingBottom="5dp"
                android:tag="11"
                android:text="12"
                android:textColor="#6B6B6B"
                android:textSize="17dp" />
    </LinearLayout>
</LinearLayout>