<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activity.MainCalendarActivity"
        android:background="#ffffff"
>
    <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="18dp"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/linearLayout2"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent">

        <ImageView
                android:id="@+id/btn_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/btn_left"/>

        <TextView
                android:id="@+id/txt_year_toolbar_main_calendar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:text="0000"
                android:textSize="17dp"
                android:textColor="#6B6B6B"/>

        <ImageView
                android:id="@+id/btn_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/btn_right"
        />
    </LinearLayout>

    <ImageView
            android:layout_width="37dp" android:layout_height="37dp"
            android:background="@drawable/round_btn" android:layout_marginTop="22dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
            app:layout_constraintStart_toStartOf="@+id/linearLayout2" android:layout_marginStart="115dp"
            android:id="@+id/img_1_main_calendar" android:visibility="gone"/>

    <TextView
            android:text="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_1_main_calendar" android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
            app:layout_constraintStart_toStartOf="@+id/linearLayout2" android:layout_marginStart="130dp"/>

    <ImageView
            android:layout_width="37dp" android:layout_height="37dp"
            android:background="@drawable/round_btn" android:layout_marginTop="22dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
            android:id="@+id/img_2_main_calendar" app:layout_constraintStart_toEndOf="@+id/txt_1_main_calendar"
            android:layout_marginStart="25dp" android:visibility="gone" />

    <TextView
            android:text="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_2_main_calendar" app:layout_constraintStart_toEndOf="@+id/txt_1_main_calendar"
            android:layout_marginStart="40dp" android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2"/>
    <TextView
            android:text="3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_3_main_calendar" app:layout_constraintStart_toEndOf="@+id/txt_2_main_calendar"
            android:layout_marginStart="40dp" android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
    />
    <ImageView
            android:layout_width="37dp" android:layout_height="37dp"
            android:background="@drawable/round_btn" android:layout_marginTop="22dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
            android:id="@+id/img_3_main_calendar" android:visibility="gone"
            app:layout_constraintStart_toEndOf="@+id/txt_2_main_calendar" android:layout_marginStart="25dp"/>
    <ImageView
            android:layout_width="37dp" android:layout_height="37dp"
            android:background="@drawable/round_btn" android:layout_marginTop="22dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
            android:id="@+id/img_4_main_calendar"   android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@+id/linearLayout2" android:layout_marginEnd="115dp"
    />
    <TextView
            android:text="4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_4_main_calendar"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
            app:layout_constraintEnd_toEndOf="@+id/linearLayout2" android:layout_marginEnd="130dp"/>
    <ImageView
            android:layout_width="37dp" android:layout_height="37dp"
            android:background="@drawable/round_btn"
            android:id="@+id/img_5_main_calendar2"
            app:layout_constraintStart_toStartOf="@+id/linearLayout2"
            android:layout_marginStart="116dp" android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/txt_1_main_calendar" android:layout_marginTop="8dp"/>
    <TextView
            android:text="5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_5_main_calendar"
            app:layout_constraintTop_toBottomOf="@+id/txt_1_main_calendar" android:layout_marginTop="17dp"
            app:layout_constraintStart_toStartOf="@+id/linearLayout2" android:layout_marginStart="130dp"/>
    <ImageView
            android:layout_width="37dp" android:layout_height="37dp"
            android:background="@drawable/round_btn"
            android:id="@+id/img_6_main_calendar2"
            app:layout_constraintStart_toEndOf="@+id/txt_5_main_calendar"
            android:layout_marginStart="25dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_2_main_calendar" android:visibility="gone"/>
    <TextView
            android:text="6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_6_main_calendar"
            app:layout_constraintTop_toBottomOf="@+id/txt_2_main_calendar" android:layout_marginTop="16dp"
            app:layout_constraintStart_toEndOf="@+id/txt_5_main_calendar" android:layout_marginStart="40dp"/>
    <ImageView
            android:layout_width="37dp" android:layout_height="37dp"
            android:background="@drawable/round_btn"
            android:id="@+id/img_7_main_calendar2"
            app:layout_constraintStart_toEndOf="@+id/txt_6_main_calendar"
            android:layout_marginStart="25dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_3_main_calendar" android:visibility="gone"/>
    <TextView
            android:text="7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_7_main_calendar"
            app:layout_constraintTop_toBottomOf="@+id/txt_3_main_calendar" android:layout_marginTop="17dp"
            app:layout_constraintStart_toEndOf="@+id/txt_6_main_calendar" android:layout_marginStart="40dp"/>
    <ImageView
            android:layout_width="37dp" android:layout_height="37dp"
            android:background="@drawable/round_btn"
            android:id="@+id/img_8_main_calendar"
            app:layout_constraintStart_toEndOf="@+id/txt_7_main_calendar"
            android:layout_marginStart="25dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_4_main_calendar"  android:visibility="gone"/>
    <TextView
            android:text="8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_8_main_calendar" app:layout_constraintEnd_toEndOf="@+id/linearLayout2"
            app:layout_constraintTop_toBottomOf="@+id/txt_4_main_calendar" android:layout_marginTop="17dp"
            android:layout_marginEnd="130dp"/>
    <ImageView
            android:layout_width="37dp" android:layout_height="37dp"
            android:background="@drawable/round_btn"
            android:id="@+id/img_9_main_calendar2"
            app:layout_constraintStart_toStartOf="@+id/linearLayout2"
            android:layout_marginStart="115dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_5_main_calendar"  android:visibility="gone"/>
    <TextView
            android:text="9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_9_main_calendar" app:layout_constraintStart_toStartOf="@+id/linearLayout2"
            app:layout_constraintTop_toBottomOf="@+id/txt_5_main_calendar" android:layout_marginTop="17dp"
            android:layout_marginStart="130dp"/>
    <ImageView
            android:layout_width="37dp" android:layout_height="37dp"
            android:background="@drawable/round_btn"
            android:id="@+id/img_10_main_calendar"
            app:layout_constraintStart_toEndOf="@+id/txt_9_main_calendar"
            android:layout_marginStart="25dp" android:layout_marginTop="9dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_6_main_calendar"  android:visibility="gone"/>
    <TextView
            android:text="10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_10_main_calendar"
            app:layout_constraintTop_toBottomOf="@+id/txt_6_main_calendar" android:layout_marginTop="18dp"
            app:layout_constraintStart_toEndOf="@+id/txt_9_main_calendar" android:layout_marginStart="36dp"/>
    <ImageView
            android:layout_width="37dp" android:layout_height="37dp"
            android:background="@drawable/round_btn"
            android:id="@+id/img_11_main_calendar"
            app:layout_constraintStart_toEndOf="@+id/txt_10_main_calendar"
            android:layout_marginStart="22dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_7_main_calendar"  android:visibility="gone"/>
    <TextView
            android:text="11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_11_main_calendar" android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_7_main_calendar" app:layout_constraintStart_toEndOf="@+id/txt_10_main_calendar"
            android:layout_marginStart="33dp"/>
    <ImageView
            android:layout_width="37dp" android:layout_height="37dp"
            android:background="@drawable/round_btn"
            android:id="@+id/img_12_main_calendar"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_8_main_calendar" android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@+id/linearLayout2" android:layout_marginEnd="115dp"/>
    <TextView
            android:text="12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_12_main_calendar" app:layout_constraintEnd_toEndOf="@+id/linearLayout2"
            android:layout_marginEnd="126dp" android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_8_main_calendar"/>


</android.support.constraint.ConstraintLayout>