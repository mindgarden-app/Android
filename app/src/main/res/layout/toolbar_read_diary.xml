<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:contentInsetStart="0dp"
        android:background="@drawable/toolbar_layout_border"
>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ImageView
                android:layout_width="8.7dp"
                android:layout_height="13.9dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="17.7dp"
                android:src="@drawable/btn_back"
                android:background="@color/colorWhite"
                android:id="@+id/btnBack" />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="작성날짜"
                android:fontFamily="@font/notosanscjkr_regular"
                android:textColor="#2B2B2B"
                android:textSize="14dp"
                android:id="@+id/txt_date_toolbar_read_diary"/>

        <ImageButton
                android:layout_width="44dp"
                android:layout_height="26dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:background="@drawable/gray_border_fill"
                android:id="@+id/btn_modify_diary_toolbar"
        />
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:layout_centerVertical="true"
                  android:layout_alignParentRight="true"
                  android:text="수정"
                  android:textSize="13dp"
                  android:layout_marginRight="25dp"
                  android:fontFamily="@font/notosanscjkr_regular"
                  android:textColor="#505050"
        />

        </RelativeLayout>


</android.support.v7.widget.Toolbar>