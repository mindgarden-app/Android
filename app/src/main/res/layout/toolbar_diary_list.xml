<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                   app:contentInsetStart="0dp"
                                   android:background="@drawable/toolbar_layout_border">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left">

            <ImageView
                    android:id="@+id/btn_updown"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="17dp"
                    android:src="@drawable/btn_updown"/>

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

            <ImageView
                    android:id="@+id/btn_left"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:paddingVertical="20dp"
                    android:paddingHorizontal="40dp"
                    android:src="@drawable/btn_left"/>

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ll_date_toolbar_diary_list">

                <TextView
                        android:id="@+id/txt_year"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0000"
                        android:fontFamily="@font/notosanscjkr_medium"
                        android:textSize="14dp"
                        android:textColor="#2B2B2B"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="년"
                        android:fontFamily="@font/notosanscjkr_medium"
                        android:textSize="14dp"
                        android:textColor="#2B2B2B"/>

                <TextView
                        android:id="@+id/txt_month"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="00"
                        android:fontFamily="@font/notosanscjkr_medium"
                        android:textSize="14dp"
                        android:textColor="#2B2B2B"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="월"
                        android:fontFamily="@font/notosanscjkr_medium"
                        android:textSize="14dp"
                        android:textColor="#2B2B2B"/>

            </LinearLayout>

            <ImageView
                    android:id="@+id/btn_right"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:paddingVertical="20dp"
                    android:paddingHorizontal="40dp"
                    android:src="@drawable/btn_right"/>

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right">

            <ImageView
                    android:id="@+id/btn_setting"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginTop="17dp"
                    android:layout_marginRight="19dp"
                    android:src="@drawable/btn_setting"/>

        </LinearLayout>

    </RelativeLayout>

</androidx.appcompat.widget.Toolbar>