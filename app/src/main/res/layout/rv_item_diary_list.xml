<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                android:background="@drawable/diary_list_border">

    <LinearLayout
            android:id="@+id/ll_rv_item_diary_list_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center_horizontal">

            <TextView
                    android:id="@+id/txt_rv_item_diary_list_day_num"
                    android:layout_width="30dp"
                    android:layout_height="29dp"
                    android:layout_centerHorizontal="true"
                    android:gravity="center_horizontal"
                    android:fontFamily="@font/notosanscjkr_medium"
                    android:text="00"
                    android:textSize="16sp"
                    android:textColor="#2B2B2B"/>

            <TextView
                    android:id="@+id/txt_rv_item_diary_list_day_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_rv_item_diary_list_day_num"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:fontFamily="@font/notosanscjkr_regular"
                    android:text="Day"
                    android:textSize="12.5sp"
                    android:textColor="#888888"/>

        </RelativeLayout>

        <LinearLayout
                android:id="@+id/ll_diary_list_content"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8">

            <TextView
                    android:id="@+id/txt_rv_item_diary_list_content"
                    android:layout_width="210dp"
                    android:layout_height="match_parent"
                    android:gravity="left|center_vertical"
                    android:fontFamily="@font/notosanscjkr_regular"
                    android:text="Content"
                    android:textSize="13.5sp"
                    android:textColor="#000000"
                    android:singleLine="true"/>

        </LinearLayout>

        <LinearLayout
                android:id="@+id/ll_diary_list_weather"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:orientation="horizontal">

            <ImageView
                    android:id="@+id/diary_list_weather_img"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:src="@drawable/icn_weather_list_ver_01"/>

        </LinearLayout>

        <LinearLayout
                android:id="@+id/lay1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:layout_marginBottom="1.5dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:background="#78DEB0"
                android:visibility="gone">

            <ImageView
                    android:id="@+id/icn_delete"
                    android:layout_width="15dp"
                    android:layout_height="16dp"
                    android:gravity="center"
                    android:src="@drawable/icn_delete_new"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>