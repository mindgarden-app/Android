<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff">

    <LinearLayout
            android:id="@+id/ll_rv_item_diary_list_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_marginVertical="10dp"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/txt_rv_item_diary_list_day_num"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:fontFamily="@font/notosanscjkr_medium"
                    android:text="00"
                    android:textSize="16dp"
                    android:textColor="#2B2B2B"/>

            <TextView
                    android:id="@+id/txt_rv_item_diary_list_day_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:fontFamily="@font/notosanscjkr_regular"
                    android:text="Day"
                    android:textSize="12.5dp"
                    android:textColor="#888888"/>

        </LinearLayout>

        <TextView
                android:id="@+id/txt_rv_item_diary_list_content"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:layout_marginVertical="10dp"
                android:gravity="center"
                android:text="Content"
                android:textSize="13.5dp"
                android:fontFamily="@font/notosanscjkr_demilight"
                android:textColor="#2B2B2B"
                android:singleLine="true"/>

        <LinearLayout
                android:id="@+id/lay1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:orientation="horizontal"
                android:background="#78DEB0"
                android:visibility="gone">

            <ImageView
                    android:id="@+id/icn_delete"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:gravity="center"
                    android:src="@drawable/icn_delete"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>