<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:background="@drawable/toolbar_border">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">
            <ImageView
                    android:id="@+id/btn_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/btn_left"/>

            <LinearLayout
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:layout_marginLeft="41.18dp"
                    android:id="@+id/ll_date_toolbar_main">
                <TextView
                        android:id="@+id/txt_main_year"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0000"
                        android:fontFamily="@font/notosanscjkr_medium"
                        android:textSize="14dp"
                        android:textColor="#2B2B2B"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="년"
                        android:fontFamily="@font/notosanscjkr_medium"
                        android:textSize="14dp"
                        android:textColor="#2B2B2B"/>

                <TextView
                        android:id="@+id/txt_main_month"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="00"
                        android:fontFamily="@font/notosanscjkr_medium"
                        android:textSize="14dp"
                        android:textColor="#2B2B2B"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="월"
                        android:fontFamily="@font/notosanscjkr_medium"
                        android:textSize="14dp"
                        android:textColor="#2B2B2B"/>

            </LinearLayout>


            <ImageView
                    android:id="@+id/btn_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="41.15dp"
                    android:src="@drawable/btn_right"/>

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right">

            <ImageView
                    android:id="@+id/btn_main_setting"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="16.39dp"
                    android:src="@drawable/btn_setting"/>

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.Toolbar>